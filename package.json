{
  "name": "kinect-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend-web",
    "ios-app",
    "shared"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=backend",
    "dev:web": "npm run dev --workspace=frontend-web",
    "dev:ios": "npm run start --workspace=ios-app",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "build:backend": "npm run build --workspace=backend",
    "build:web": "npm run build --workspace=frontend-web",
    "build:shared": "npm run build --workspace=shared",
    "build:all": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:api": "echo 'Open tests/api/kinect.http in VS Code with REST Client extension or import tests/api/kinect.postman_collection.json into Postman'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present",
    "prepare": "[ -n \"$CI\" ] || husky",
    "seed": "cd backend && npm run seed",
    "reset-db": "cd backend && npm run reset",
    "demo": "concurrently \"npm run dev:backend\" \"npm run dev:web\" --names \"API,WEB\" --prefix-colors \"blue,green\"",
    "demo:seed": "npm run seed && npm run demo"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@xmldom/xmldom": "^0.9.3",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "mongodb": "^6.19.0"
  }
}
