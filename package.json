{
  "name": "kinect-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend-web",
    "ios-app",
    "shared"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=backend",
    "dev:web": "npm run dev --workspace=frontend-web",
    "dev:ios": "npm run start --workspace=ios-app",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "build:backend": "npm run build --workspace=backend",
    "build:web": "npm run build --workspace=frontend-web",
    "build:shared": "npm run build --workspace=shared",
    "build:all": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",
    "@xmldom/xmldom": "^0.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}