# Render Production Environment Configuration
# Copy this to .env for local development with production database

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kinect?retryWrites=true&w=majority

# Node Environment
NODE_ENV=development
PORT=3001

# JWT Secrets (generate secure random strings for production)
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For production: CORS_ORIGIN=https://kinect-web.onrender.com

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@kinect.app

# Frontend Configuration (for local development)
FRONTEND_URL=http://localhost:5173

# API URL (for frontend)
VITE_API_URL=http://localhost:3001/api